#if($!errorMsg)
<div class="alert alert-warning" role="alert"><strong>Warning!</strong> $!{errorMsg}</div>
#end

<form action="task_form_submit.htm" class="form-horizontal" method="$!{form.method}">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>
    <input type="hidden" name="taskType" value="$!{taskType}"/>
    #foreach($field in $form.fields)
        <div class="form-group">
            <label>$!{field.label}</label><input class="form-control form-control-sm" name="$!{field.name}" value="$!{field.value}" #if($field.required) required #end #if($field.readOnly)
                                                 readonly #end>
        </div>
    #end
    <button class="btn btn-danger btn-sm" type="submit">保存</button>
</form>