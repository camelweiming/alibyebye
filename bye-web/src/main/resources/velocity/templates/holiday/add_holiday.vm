#if($!errorMsg)
<div class="alert alert-warning" role="alert"><strong>Warning!</strong> $!{errorMsg}</div>
#end

<form action="add_holiday.htm" class="form-horizontal" method="post">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>
    <div class="form-group">
        <label>天数</label><input class="form-control form-control-sm" name="days" value="$!{days}" required>
    </div>
    <div class="form-group">
        <label>理由</label><input class="form-control form-control-sm" name="description" value="$!{description}" required>
    </div>
    <button class="btn btn-danger btn-sm" type="submit">保存</button>
</form>
