<form action="edit_parent.htm" class="form-horizontal" method="post">
    <input type="hidden" name="${_csrf.parameterName}" value="${_csrf.token}"/>
    <div class="form-group">
        <label>ID</label><input class="form-control form-control-sm" name="userId" value="$!{user.id}" readonly>
    </div>
    <div class="form-group">
        <label>用户名</label><input class="form-control form-control-sm" name="name" value="$!{user.name}" readonly>
    </div>
    <div class="form-group">
        <label>上级</label><input class="form-control form-control-sm" name="parentIds" value="$!{parentIds}" required>
    </div>
    <button class="btn btn-danger btn-sm" type="submit">保存</button>
</form>

<h4>上级列表</h4>
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
        <tr>
            <th>ID</th>
            <th>用户名</th>
        </tr>
        </thead>
        <tbody>
            #foreach($user in $paging.data)
            <tr>
                <td>$!{user.id}</td>
                <td>$!{user.userName}</td>
            </tr>
            #end
        </tbody>
    </table>
</div>
