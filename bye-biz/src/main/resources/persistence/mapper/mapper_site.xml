<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abb.bye.mapper.SiteMapper">

    <sql id="columns">
        id,
        gmt_create,
        gmt_modified,
        name,
        logo,
        site,
        h5_url,
        ios_url,
        android_url,
        attributes,
        status,
        tags,
        site_key,
        priority,
        categories
    </sql>

    <select id="get" resultType="com.abb.bye.client.domain.SiteDO" parameterType="long">
        select
        <include refid="columns"/>
        from site where id=#{id}
    </select>

    <select id="getBySiteKey" resultType="com.abb.bye.client.domain.SiteDO" parameterType="string">
        select
        <include refid="columns"/>
        from site where site_key=#{siteKey}
    </select>

    <select id="getBySite" resultType="com.abb.bye.client.domain.SiteDO" parameterType="int">
        select
        <include refid="columns"/>
        from site where site=#{site}
    </select>

    <select id="list" resultType="com.abb.bye.client.domain.SiteDO">
        select
        <include refid="columns"/>
        from site
    </select>

    <insert id="insert" parameterType="com.abb.bye.client.domain.SiteDO">
        insert site
        ( id, gmt_create, gmt_modified, name, logo, site, h5_url, ios_url, android_url, attributes, status, tags, site_key, priority, categories)
        values
        ( #{id}, now() ,now(), #{name}, #{logo}, #{site}, #{h5Url}, #{iosUrl}, #{androidUrl}, #{attributes}, #{status}, #{tags}, #{siteKey}, #{priority}, #{categories})
    </insert>


    <update id="update" parameterType="com.abb.bye.client.domain.SiteDO">
        update site
        <set>
            gmt_modified=now()
            ,h5_url=#{h5Url}
            ,ios_url=#{iosUrl}
            ,android_url=#{androidUrl}
            ,categories=#{categories}
            <if test="name!=null">,name=#{name}</if>
            <if test="logo!=null">,logo=#{logo}</if>
            <if test="site!=null">,site=#{site}</if>
            <if test="attributes!=null">,attributes=#{attributes}</if>
            <if test="status!=null">,status=#{status}</if>
            <if test="tags!=null">,tags=#{tags}</if>
            <if test="priority!=null">,priority=#{priority}</if>
        </set>
        where id=#{id}
    </update>

</mapper>