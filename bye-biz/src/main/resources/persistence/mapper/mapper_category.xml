<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.abb.bye.mapper.CategoryMapper">

    <sql id="columns">
        id,
        name,
        sort,
        status
    </sql>

    <insert id="insert" parameterType="com.abb.bye.client.domain.CategoryDO">
        insert into category
        ( id , gmt_create , gmt_modified , name , sort , status )
        values
        ( #{id} , now() , now() , #{name} , #{sort} , 1 )
    </insert>

    <update id="update" parameterType="com.abb.bye.client.domain.CategoryDO">
        update category
        set
        gmt_modified = now() ,name = #{name} ,sort = #{sort}
        where id = #{id}
    </update>

    <select id="list" resultType="com.abb.bye.client.domain.CategoryDO">
        select
        <include refid="columns"/>
        from category
    </select>

    <select id="get" resultType="com.abb.bye.client.domain.CategoryDO">
        select
        <include refid="columns"/>
        from category where id = #{id}
    </select>
</mapper>